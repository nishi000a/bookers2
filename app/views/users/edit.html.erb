<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h2>User info</h2>
      
      <% if @user.errors.any? %>
      <h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      
      <%= form_with model: @user do |f| %>

        <label for="inputName">Name</label><br />
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%><br />

        <label for="inputImage">Image</label><br />
        <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*" %><br />

        <label for="inputIntroduction">Introduction</label><br />
        <%= f.text_area :introduction %><br />

        <%= f.submit "Update User" %>
      <% end %>

    </div>
  </div>
</div>